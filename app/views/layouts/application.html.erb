<!DOCTYPE html>
<html>
  <head>
    <title>ItEvents</title>
    <%= csrf_meta_tags %>
     <%= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/bootswatch/4.0.0-beta.3/flatly/bootstrap.min.css' %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

 <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
  <a class="navbar-brand" href="#">IT-Events</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation" style="">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarColor01">
    <ul class="nav navbar-nav navbar-left">
      <li>
        <%= link_to "Мероприятия", home_path, :class => "nav-link" %>
      </li>
      <li>
        <%= link_to "Организаторы", organizers_path, :class => "nav-link" %>
      </li>
    </ul>
    <% if user_signed_in? %>
      <%= current_user.email %>
      <%= link_to "Выйти", destroy_user_session_path, method: :delete %>
    <% else %>
      <%= link_to "Войти", new_user_session_path %>
    <% end %>
