<% @events.each do |event| %>
	<div class="card">
		<%= image_tag event.image, :class => "card-img" %>
		<h3><%= link_to event.name, event_path(event.id) %></h3>
		<p>
			<strong>Дата: </strong> 
			<%= event.date.to_datetime.strftime("%m.%d.%y at %H:%M") %>
		</p>
		<p>
			<strong>Адрес:</strong> 
			<%= event.address %>
		</p>
		<p><%= event.description %></p>
	</div>
<% end %>

<%= will_paginate @collection, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
